# Environment variables for Docker deployment

# OpenAI API Key (required for AI analysis)
OPENAI_API_KEY=your_openai_api_key_here

# CORS Configuration (adjust for production)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081

# Firebase Configuration
# Path to Firebase service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=/app/firebase-service-account.json

# AI Pipeline Configuration  
AI_PIPELINE_URL=http://ai-backend:8000

# Spring Boot Profile
SPRING_PROFILES_ACTIVE=docker

# Flask Configuration
FLASK_ENV=production
PYTHONUNBUFFERED=1

# AI Coach External API Keys (Optional for mobile app)
EXPO_PUBLIC_WEATHER_API_KEY=your_openweather_api_key_here
EXPO_PUBLIC_NUTRITION_API_KEY=your_usda_api_key_here

# Firebase Configuration for Mobile App (Required)
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_app_id

# Backend Services for Mobile App
EXPO_PUBLIC_API_BASE_URL=http://localhost:8080